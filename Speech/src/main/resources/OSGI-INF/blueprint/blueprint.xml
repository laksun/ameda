<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
    xsi:schemaLocation="
http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

    <jaxrs:server id="pollyFileService" address="/polly">
        <jaxrs:serviceBeans>
            <ref component-id="pollyFileSvc"/>
            <ref component-id="swaggerResourceJSON"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <ref component-id="resourceWriter" />
            <ref component-id="apiWriter" />
        </jaxrs:providers>
    </jaxrs:server>

    <bean id="pollyFileSvc" class="com.aws.polly.service.TexttoPolly"/>
    <bean id="swaggerResourceJSON" class="com.wordnik.swagger.jaxrs.listing.ApiListingResourceJSON" />

    <!-- Swagger writers -->
    <bean id="resourceWriter" class="com.wordnik.swagger.jaxrs.listing.ResourceListingProvider" />
    <bean id="apiWriter" class="com.wordnik.swagger.jaxrs.listing.ApiDeclarationProvider" />

    <bean id="swaggerConfig" class="com.wordnik.swagger.jaxrs.config.BeanConfig">
        <property name="resourcePackage" value="com.aws.polly.service"/>
        <property name="version" value="1.0.0"/>
        <property name="basePath" value="http://localhost:8181/cxf/polly"/>
        <property name="title" value="Rest polly app"/>
        <property name="description" value="This is a app."/>
        <property name="contact" value="ylaksun@gmail.com"/>
        <property name="license" value="Apache 2.0 License"/>
        <property name="licenseUrl" value="http://www.apache.org/licenses/LICENSE-2.0.html"/>
        <property name="scan" value="true"/>
     </bean>

</blueprint>
